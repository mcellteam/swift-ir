QGroupBox
{
    /*font-size: 18px;*/
    font-weight: bold;
    color: #ffffff;
}

QMainWindow {
	background-color:#000000;
	/*background-color:#FFFFFF;*/
}
QDialog {
	background-color:#000000;
}
QColorDialog {
	background-color:#000000;
}
QTextEdit {
	background-color:#000000;
	color: #a9b7c6;

	font-weight: bold;
}
QPlainTextEdit {
	selection-background-color:#f39c12;
